<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:background="@drawable/back"
    tools:context=".JavaActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#0A1C33"
        android:text="\n Registration Form \n"
        android:textSize="24sp"
        android:textColor="@android:color/primary_text_dark"
        android:textAlignment="center"
        tools:ignore="RtlCompat" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="top"
        android:background="#6E909F" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="top"
       android:background="#F6FBFD" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="top"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="145dp"
        android:background="@drawable/avatar"
         android:textSize="24sp"
        android:textColor="@android:color/primary_text_dark"
        android:textAlignment="center"
        tools:ignore="RtlCompat" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EDF4F4"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:text="Name: "/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:hint="Enter your Name"
            android:textAlignment="center"
            android:lines="1"
            android:textSize="14sp"
            android:background="#662C2739"
            android:textColor="#F0F6F5"
            android:textColorHint="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EDF4F4"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:text="Last Name: "/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:hint="Enter your Last Name"
            android:textAlignment="center"
            android:lines="1"
            android:textSize="14sp"
            android:background="#662C2739"
            android:textColor="#F0F6F5"
            android:textColorHint="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EDF4F4"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:text="Phone: "/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:hint="Enter your Phone"
            android:textAlignment="center"
            android:lines="1"
            android:textSize="14sp"
            android:background="#662C2739"
            android:textColor="#F0F6F5"
            android:textColorHint="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EDF4F4"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:text="Email: "/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="40dp"
            android:hint="Enter your Email"
            android:textAlignment="center"
            android:lines="1"
            android:textSize="14sp"
            android:background="#662C2739"
            android:textColor="#F0F6F5"
            android:textColorHint="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:inputType="textEmailAddress" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EDF4F4"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold"
            android:text="Address: "/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:hint="Enter your Phone"
            android:textAlignment="center"
            android:lines="1"
            android:textSize="14sp"
            android:background="#662C2739"
            android:textColor="#F0F6F5"
            android:textColorHint="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:inputType="textPostalAddress" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:background="@drawable/back"
            android:text="Register"
            android:textColor="#fff" />

        <Button
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center"
            android:background="@drawable/back"
            android:text="Cancel"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>